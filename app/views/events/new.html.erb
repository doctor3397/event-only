<h1>New Event</h1>

<%= form_for @event do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :location_id %>
    <%= f.text_field :location_id %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :capacity %>
    <%= f.text_field :capacity %>
  </p>

  <p>
    <%= f.submit "Add Events" %>
  </p>

<% end %>
